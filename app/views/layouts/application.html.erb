<!DOCTYPE html>
<html>
<head>
  <title>ProcessTracking</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

<% [:notice, :error, :warning].map do |flash_type| %>
  <%= content_tag(:div, flash[flash_type], :class => 'flash', :id => "message_#{  flash_type}") %>
<% end %>

<%= yield %>

</body>
</html>
